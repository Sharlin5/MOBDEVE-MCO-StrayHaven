<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_chat_right_user_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        tools:visibility="visible"
        android:src="@drawable/icon_default_user"/>

    <TextView
        android:id="@+id/tv_right_chat_message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/iv_chat_right_user_pic"
        android:layout_toRightOf="@id/iv_chat_right_user_pic"
        android:background="@drawable/chat_right"
        android:fontFamily="@font/karla"
        android:padding="8dp"
        android:text="@string/lorem_ipsum_desc"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>


